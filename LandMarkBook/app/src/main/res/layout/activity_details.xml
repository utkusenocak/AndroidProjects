<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/landmarkImage"
        android:layout_width="280dp"
        android:layout_height="233dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/landmarkNameText"
        android:layout_width="237dp"
        android:layout_height="82dp"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:text="Landmark Name"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/landmarkImage"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/landmarkImage"
        app:layout_constraintTop_toBottomOf="@+id/landmarkImage" />

    <TextView
        android:id="@+id/landmarkCityText"
        android:layout_width="237dp"
        android:layout_height="82dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Landmark City"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/landmarkNameText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/landmarkNameText"
        app:layout_constraintTop_toBottomOf="@+id/landmarkNameText"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>